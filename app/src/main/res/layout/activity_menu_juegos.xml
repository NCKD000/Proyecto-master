<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fndo7"
    tools:context=".MenuJuegosActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="9dp"
        android:gravity="center"
        android:text="Bienvenidos a la zona de juegos"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp" />

    <!-- android:onClick="memoria" -->
    <Button
        android:id="@+id/memorice"
        android:layout_width="118dp"
        android:layout_height="119dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="86dp"
        android:background="@drawable/puzzle"
        android:gravity="center"
        tools:layout_editor_absoluteX="165dp"
        tools:layout_editor_absoluteY="132dp" />

    <!-- EMOCIONAL -->
    <Button
        android:id="@+id/emocional"
        android:layout_width="118dp"
        android:layout_height="119dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="218dp"
        android:background="@drawable/emocional"
        android:gravity="center"
        android:onClick="emocional"
        tools:layout_editor_absoluteX="165dp"
        tools:layout_editor_absoluteY="132dp" />

    <!-- android:onClick="escolar" -->
    <Button
        android:id="@+id/escolar"
        android:layout_width="118dp"
        android:layout_height="119dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="372dp"
        android:background="@drawable/escolar"
        android:gravity="center"
        tools:layout_editor_absoluteX="165dp"
        tools:layout_editor_absoluteY="132dp" />

</RelativeLayout>